{
  "name": "chat_app",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "format:frontend": "prettier --write frontend",
    "format:backend": "prettier --write backend",
    "format": "prettier --write .",
    "install:frontend": "npm install --workspace=frontend",
    "install:backend": "npm install --workspace=backend",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:backend": "npm --workspace backend run start:dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\""
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2"
  }
}
